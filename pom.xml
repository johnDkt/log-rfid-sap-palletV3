		</dependency>
		<dependency>
			<groupId>com.miglayout</groupId>
			<artifactId>miglayout</artifactId>
			<version>3.7.4</version>
		</dependency>
		<dependency>
			<groupId>com.decathlon.log.rfid</groupId>
			<artifactId>keyboard</artifactId>
			<version>1.0.0</version>
		</dependency>

		<!-- TEST DEPENDENCIES -->

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-api-mockito</artifactId>
			<version>${powermock.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-module-junit4</artifactId>
			<version>${powermock.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-api-easymock</artifactId>
			<version>${powermock.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<resource-name>resources-dev</resource-name>
			</properties>
		</profile>
		<profile>
			<id>preprod</id>
			<properties>
				<resource-name>resources-preprod</resource-name>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<resource-name>resources-prod</resource-name>
			</properties>
		</profile>
		<profile>
			<id>toolchains_profile</id>
			<activation>
				<file>
					<exists>${user.home}/.m2/toolchains.xml</exists>
				</file>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-toolchains-plugin</artifactId>
						<version>1.1</version>
						<configuration>
							<toolchains>
								<jdk>
									<version>${maven.compiler.source}</version>
								</jdk>
							</toolchains>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>toolchain</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>linux-createRPM</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<version>2.1.2</version>
						<executions>
							<execution>
								<id>build-rpm</id>
								<goals>
									<goal>attached-rpm</goal>
								</goals>
								<phase>${maven.rpm.phase}</phase>
							</execution>
						</executions>
						<configuration>
							<group>Application/System</group>
							<description>Package comprenant l'application du mat</description>
							<needarch>i386</needarch>
							<release>release</release>
							<packager>jonathan.knockaert.partner@decathlon.com</packager>
							<name>${project.name}</name>
							<defineStatements>
								<defineStatement>fup_csv /var/www/html/sysinfo/plugins/fup.csv</defineStatement>
								<defineStatement>process_list /var/www/html/sysinfo/plugins/phpsysinfo/process.list</defineStatement>
								<defineStatement>configmgt /var/www/html/sysinfo/plugins/config-mgt</defineStatement>
							</defineStatements>
							<mappings>
								<mapping>
									<directory>/etc/${project.name}</directory>
									<sources>
										<source>
											<location>target/${project.name}.jar</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>/etc/${project.name}/lib</directory>
									<sources>
										<source>
											<location>target/lib</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>/etc/${project.name}/config</directory>
									<filemode>0774</filemode>
									<username>apache</username>
									<groupname>root</groupname>
									<configuration>true</configuration>
									<sources>
										<source>
											<location>src/main/resources/epcconfiguration.xml</location>
										</source>
										<source>
											<location>src/main/${resource-name}/log4j-pallet.properties</location>
										</source>
										<source>
											<location>src/main/resources/profiles.properties</location>
										</source>
										<source>
											<location>src/main/resources/scanner.properties</location>
										</source>
										<source>
											<location>src/main/resources/log4j-reader.properties</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>/etc/${project.name}/config</directory>
									<filemode>0774</filemode>
									<username>apache</username>
									<groupname>root</groupname>
									<configuration>noreplace</configuration>
									<sources>
										<source>
											<location>src/main/resources/alert.properties</location>
										</source>
										<source>
											<location>src/main/${resource-name}/application.properties</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>/etc/X11/xorg.conf.d</directory>
									<filemode>0774</filemode>
									<username>apache</username>
									<groupname>root</groupname>
									<configuration>true</configuration>
									<sources>
										<source>
											<location>script/99-calibration.conf</location>
										</source>

									</sources>
								</mapping>
								<mapping>
									<directory>/etc/udev/rules.d</directory>
									<filemode>0774</filemode>
									<username>apache</username>
									<groupname>root</groupname>
									<configuration>true</configuration>
									<sources>
										<source>
											<location>script/20-pallet-usb-serial.rules</location>
										</source>

									</sources>
								</mapping>
								<mapping>
									<directory>/etc/${project.name}</directory>
									<filemode>0777</filemode>
									<sources>
										<source>
											<location>scripts/generateAntennaAlert.sh</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>/thin_sys/profiles/vendor/.idesktop/icons/</directory>
									<sources>
										<source>
											<location>script/icon_pallet.png</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>/thin_sys/profiles/vendor/.idesktop/</directory>
									<sources>
										<source>
											<location>script/pallet.lnk</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>/var/www/html/sysinfo/plugins/pallet/</directory>
									<sources>
										<source>
											<location>sysinfo_plugin</location>
										</source>
									</sources>
								</mapping>
							</mappings>
							<preinstallScriptlet>
								<scriptFile>script/preinstall</scriptFile>
								<fileEncoding>utf-8</fileEncoding>
							</preinstallScriptlet>
							<postinstallScriptlet>
								<scriptFile>script/postinstall</scriptFile>
								<fileEncoding>utf-8</fileEncoding>
							</postinstallScriptlet>
							<preremoveScriptlet>
								<scriptFile>script/preremove</scriptFile>
								<fileEncoding>utf-8</fileEncoding>
							</preremoveScriptlet>
							<postremoveScriptlet>
								<scriptFile>script/postremove</scriptFile>
								<fileEncoding>utf-8</fileEncoding>
							</postremoveScriptlet>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
